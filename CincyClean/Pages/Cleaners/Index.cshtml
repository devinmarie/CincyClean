@page
@model CincyClean.Pages.Cleaners.IndexModel

@{
    ViewData["Title"] = "Cleaners";
}

<div class="text-center bottom-margin-sm">
    <h1 class="bottom-margin-sm">Employeed Cleaners</h1>
    <a href="/Cleaners/Create" class="btn btn-outline-dark">Add New Cleaner</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cleaner[0].CleanerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cleaner[0].PricePerHour)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Cleaner) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CleanerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerHour)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.CleanerId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.CleanerId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.CleanerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
